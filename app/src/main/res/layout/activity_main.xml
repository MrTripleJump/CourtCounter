<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="edu.desu.keepscore.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum=".5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="24sp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="48sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/zero_text_view"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 points"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:id="@+id/three_points_text_view"
                android:onClick="plusThreeHome"
                android:background="#FFA500"/>
            />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 points"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/two_points_text_view"
                android:onClick="plusTwoHome"
                android:background="#FFA500"/>
            />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 point"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/one_point_text_view"
                android:onClick="plusOneHome"
                android:background="#FFA500"/>
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum=".5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Away"
                android:textSize="24sp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="48sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/zero1_text_view"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 points"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:id="@+id/three_points2_text_view"
                android:onClick="plusThreeAway"
                android:background="#FFA500"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 points"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/two_points2_text_view"
                android:onClick="plusTwoAway"
                android:background="#FFA500"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 point"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:id="@+id/one_point2_text_view"
                android:onClick="plusOneAway"
                android:background="#FFA500"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Reset"
        android:id="@+id/reset_text_view"
        android:onClick="reset"
        android:background="#FFA500"/>
</RelativeLayout>
